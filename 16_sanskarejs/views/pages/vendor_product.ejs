  <script>
    function showCombo() {
      combo = document.getElementById('combo');
      combo.style.display = 'block';

    }
    function hideCombo() {
      combo = document.getElementById('combo');
      combo.style.display = 'none';

    }

    async function showContent(pid) {
      // const pid=document.getElementById('ids').innerHTML;
      const id = document.getElementById('id-edit');
      const pname = document.getElementById('name-edit');
      const pprice = document.getElementById('price-edit');
      const pdesc = document.getElementById('description-edit');
      const pimg = document.getElementById('img-edit');
      // data in the place of params
      const did = document.getElementById('did');
      const dimg = document.getElementById('dimg');

      await fetch(`/vendor_registration/editVendorproduct/${pid}`, { mehod: 'GET' })
        .then(async (res) => await res.json())
        .then((data) => {
          console.log(data);
          id.value = data.data._id;
          pname.value = data.data.vproduct_name;
          pprice.value = data.data.vproduct_price;
          pdesc.innerHTML = data.data.vproduct_description;
          pimg.src = `/uploads/${data.data.vproduct_imag}`;
          did.value = pid;
          dimg.value = data.data.vproduct_imag;

        })
        .catch((err) => {
          console.log('error in vendor script' + err + "error occures..............")
        });
      console.log(pid)
    }
  </script>
