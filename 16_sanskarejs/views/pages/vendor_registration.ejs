  <form action="/vendor_registration/vendoradd" method="post" onsubmit="return allValidate(event)">
    <section class="h-100 h-custom gradient-custom-2">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12">
            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
              <div class="card-body  p-0">
                <div class="row g-0">
                  <div class="col-lg-6">
                    <div class="p-5">
                      <h3 class="fw-normal mb-5" style="color: #f47c00;">Vendore Registration Form</h3>
                      <!-- <div class="row">
                          <div class="col-md-6 pb-3">
                            <select class="select" name="role"  style="color: #f47c00;">
                              <option selected>Role</option>
                              <option  value="admin">Admin</option>
                              <option  value="vendor">Vendor</option>
                              <option  value="customer">Customer</option>
                            </select>
                          </div>
  
                          <div class="col-md-6 pb-3">
                          </div>
                        </div> -->

                      <div class="row">
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline">
                            <input type="text" id="name" name="name" class="form-control form-control-lg" />
                            <label class="form-label" id="firstNameValid" onkeyup="return   firstNameValidate(this)"
                              for="form3Examplev2"> Name</label>
                            <!-- <span id="nameValid" class="fa fa-user"></span> -->
                          </div>

                        </div>
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="mb-4 pb-2">
                            <div class="form-outline">
                              <input type="email" id="email" name="email" onkeyup="return mailValidate(email)"
                                class="form-control form-control-lg" />
                              <label class="form-label" id="mailValid" for="form3Examplev4">Email</label>
                            </div>
                          </div>

                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline">
                            <input type="text" id="contact" name="contact" onkeyup="return contactValidate()"
                              class="form-control form-control-lg" />
                            <label class="form-label" id="contcatValid" for="form3Examplev5">Contact</label>
                          </div>
                        </div>
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline">
                            <input type="text" id="category" onkeyup="return categoryValidate()" name="category"
                              class="form-control form-control-lg" />
                            <label class="form-label" id="category" for="form3Examplev5">Category</label>
                          </div>

                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">

                          <div class="form-outline">
                            <input type="password" id="password" name="password" onkeyup="return passwordValidate()"
                              class="form-control form-control-lg" />
                            <label class="form-label" id="passwordValid" for="form3Examplev5">Password</label>
                          </div>
                        </div>
                        <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">

                          <div class="form-outline">
                            <input type="text" id="confirmPassword" onkeyup="return matchPassword()"
                              name="confirmpassword" class="form-control form-control-lg" />
                            <label class="form-label" id="confirmPasswordValid" for="form3Examplev5">Confirm
                              Password</label>
                          </div>

                        </div>
                      </div>

                    </div>
                  </div>
                  <div class="col-lg-6 bg-indigo text-white">
                    <div class="p-5">

                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">

                          <select name="gst_select" onchange="gstclick()" class="form-select" id="gstselect"
                            style="border: solid 1px black;" aria-label="Default select example">
                            <option value="">shop type number</option>
                            <option value="GST">GST</option>
                            <option value="license_number">License Number</option>
                            <option value="letter">Letter</option>

                          </select>
                          <!-- <input type="text" id="gst_number" name="gst_number" onkeyup="return gstNoValidate(this)" class="form-control form-control-lg " style="display: none;" /> -->
                        </div>
                      </div>
                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <input type="text" id="gst_number" name="gst_number" onkeyup="return gstNoValidate(this)"
                            class="form-control form-control-lg " style="display: none;" placeholder="GST" />
                          <input type="text" id="license_number" name="license_number" onkeyup="return licenseNo(this)"
                            class="form-control form-control-lg " placeholder="License" style="display: none;" />
                          <label class="form-label1" id="gstNoValid" for="form3Examplea2" style="display: none;">Gst
                            Number</label>
                          <label class="form-label1" id="LicenseValid" for="form3Examplea2"
                            style="display: none;">License Number</label>
                        </div>
                      </div>

                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <input type="text" id="aadhar_number" name="aadhar_number"
                            onkeyup="return aadharValidate(this)" class="form-control form-control-lg" />
                          <label class="form-label1" id="aadhar_number" for="form3Examplea2">Aadhar Number</label>
                        </div>
                      </div>
                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <select class="form-select country" aria-label="Default select example"
                            onchange="loadStates()">
                            <option selected>Select Country</option>
                          </select>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6 mb-4 pb-2">
                          <div class="form-outline form-white">
                            <select name="state" id="state" class="form-select state"
                              aria-label="Default select example" onchange="loadCities()">
                              <option selected>Select State</option>
                            </select>
                          </div>



                        </div>
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline form-white">
                            <select class="form-select city" name="city" id="city" aria-label="Default select example">
                              <option selected>Select City</option>
                            </select>
                            <!-- <label class="form-label1" for="form3Examplea5">City</label> -->
                          </div>

                        </div>

                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline form-white">
                            <input type="text" id="street" name="street" onkeyup="return streetValidate(this)"
                              class="form-control form-control-lg" />
                            <label class="form-label1" id="streetValid" for="form3Examplea4">Street</label>
                          </div>

                        </div>
                        <div class="col-md-6 mb-4 pb-2">

                          <div class="form-outline form-white">
                            <input type="text" id="pincode" name="pin_code" class="form-control form-control-lg" />
                            <label class="form-label1" for="form3Examplea5">Pin Code</label>
                          </div>

                        </div>
                      </div>

                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white text-center">
                          <button class="text-center border-0"  style="background-color: red;" onclick="showOtp()" id="otp-btn">Send otp to
                            Verify</button>
                        </div>
                      </div>
                      <div class="mb-4 pb-2 text-center d-flex justify-content-center">
                        <div class="form-outline form-white w-50 text-center">
                          <input type="text" id="otp" name="otp" placeholder="Enter Otp"
                            class="text-center form-control" style="display: none;" />
                        </div>
                      </div>

                      <div class="form-check d-flex justify-content-start mb-4 pb-3">
                        <input class="form-check-input me-3" type="checkbox" value="" id="form2Example3c" />
                        <label class="form-check-label text-white" for="form2Example3">
                          I do accept the <a href="#!" class="text-white"><u>Terms and Conditions</u></a> of your
                          site.
                        </label>
                      </div>
                      <input type="submit" class="btn btn-light btn-lg" data-mdb-ripple-color="dark" value="Register">
                    </div>
                    <span style="color: red;">
                      <%=msg%>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </form>

